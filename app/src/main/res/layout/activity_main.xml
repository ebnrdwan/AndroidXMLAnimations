<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.viralandroid.androidxmlanimation.MainActivity">

    <Button
        android:id="@+id/zoom_in_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:minWidth="150dp"
        android:onClick="androidZoomInAnimation"
        android:text="Zoom In" />

    <Button
        android:id="@+id/zoom_out_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/zoom_in_xml_animation"
        android:minWidth="150dp"
        android:onClick="androidZoomOutAnimation"
        android:text="Zoom Out" />

    <Button
        android:id="@+id/fade_in_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/zoom_in_xml_animation"
        android:minWidth="150dp"
        android:onClick="androidFadeInAnimation"
        android:text="Fade In" />

    <Button
        android:id="@+id/fade_out_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zoom_out_xml_animation"
        android:layout_alignStart="@+id/zoom_out_xml_animation"
        android:layout_alignTop="@+id/fade_in_xml_animation"
        android:minWidth="150dp"
        android:onClick="androidFadeOutAnimation"
        android:text="Fade Out" />

    <Button
        android:id="@+id/move_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fade_in_xml_animation"
        android:layout_alignRight="@+id/fade_in_xml_animation"
        android:layout_below="@+id/fade_in_xml_animation"
        android:minWidth="150dp"
        android:onClick="androidMoveAnimation"
        android:text="Move" />

    <Button
        android:id="@+id/rotate_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fade_out_xml_animation"
        android:minWidth="150dp"
        android:onClick="androidRotateAnimation"
        android:text="Rotate" />

    <Button
        android:id="@+id/blink_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/move_xml_animation"
        android:layout_alignRight="@+id/move_xml_animation"
        android:layout_below="@+id/move_xml_animation"
        android:minWidth="150dp"
        android:onClick="androidBlinkAnimation"
        android:text="Blink" />

    <Button
        android:id="@+id/slide_down_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rotate_xml_animation"
        android:minWidth="150dp"
        android:onClick="androidSlideDownAnimation"
        android:text="Slide Up" />

    <Button
        android:id="@+id/slide_up_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="androidSlideUpAnimation"
        android:layout_below="@+id/blink_xml_animation"
        android:minWidth="150dp"
        android:text="Slide Down" />

    <Button
        android:id="@+id/bounce_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="androidBounceAnimation"
        android:layout_alignEnd="@+id/slide_down_xml_animation"
        android:layout_alignRight="@+id/slide_down_xml_animation"
        android:layout_alignTop="@+id/slide_up_xml_animation"
        android:minWidth="150dp"
        android:text="Bounce" />

    <Button
        android:id="@+id/sequential_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="androidSequentialAnimation"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/slide_up_xml_animation"
        android:minWidth="150dp"
        android:text="Sequential Animation" />

</RelativeLayout>
