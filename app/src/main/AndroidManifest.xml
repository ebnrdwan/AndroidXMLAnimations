<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viralandroid.androidxmlanimation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AndroidZoomInAnimationActivity"></activity>

        <activity android:name=".AndroidZoomOutAnimationActivity"></activity>

        <activity android:name=".AndroidFadeInAnimationActivity"></activity>

        <activity android:name=".AndroidFadeOutAnimationActivity"></activity>

        <activity android:name=".AndroidMoveAnimationActivity"></activity>

        <activity android:name=".AndroidSlideUpAnimationActivity"></activity>

        <activity android:name=".AndroidSlideDownAnimationActivity"></activity>

        <activity android:name=".AndroidRotateAnimationActivity"></activity>

        <activity android:name=".AndroidBlinkAnimationActivity"></activity>

        <activity android:name=".AndroidBounceAnimationActivity"></activity>

        <activity android:name=".AndroidSequentialAnimationActivity"></activity>

    </application>

</manifest>